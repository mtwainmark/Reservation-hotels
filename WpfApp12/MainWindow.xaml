                <ListBoxItem Margin="5" Content="Бронирования" Selected="ListBoxItem_Selected_2"/>
            </ListBox>
        </Grid>

        <Grid x:Name="mainGrid" Grid.Column="1">
            
        </Grid>
    </Grid>
